{
    "version": "2",
    "build_cookbook": {
      "name": "delivery-truck",
      "path": ".delivery/delivery-truck"
    },
    "delivery-truck": {
      "lint": {
        "foodcritic": {
          "ignore_rules": ["FC001"],
          "only_rules": ["FC002"]
        }
      },
      "publish": {
        "chef_server": true
      }
    },
    "skip_phases": [
      "smoke",
      "security",
      "quality"
    ]
 }

